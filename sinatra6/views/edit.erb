<% if @note %>
  <form class="" action="/<%= @note.id %>" method="post" id="edit">
    <input type="hidden" name="_method" value="put">
    <textarea name="content" rows="8" cols="30"><%= @note.content %></textarea>
    <input type="checkbox" name="complete" <%= "checked" if @note.complete %>>
    <input type="submit">
  </form>

<% else %>
  <p>Nota no encontrada</p>
<% end %>
